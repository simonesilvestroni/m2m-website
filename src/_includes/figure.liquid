	<img src="{{ site.url }}/assets/images/{{ include.image }}" alt="{{ include.alt | default: include.caption }}" {{ include.width ? include.width | prepend: 'width="' | append: '"' }} {{ include.height ? include.height | prepend: 'height="' | append: '"' }}>
	{% if include.caption %}<figcaption>{{ include.caption }}</figcaption>{% endif %}
</figure>